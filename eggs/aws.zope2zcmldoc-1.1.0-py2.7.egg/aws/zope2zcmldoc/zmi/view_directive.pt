<html metal:use-macro="context/@@controlpanel_macros/macros/master"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="aws.zope2zcmldoc">

  <metal:main-slot fill-slot="body">
    <p class="location-bar">
      <a href="@@manage_main" i18n:translate="">Namespaces</a> &gt;
      <a href="#"
         tal:attributes="href view/this_namespace_view_url">
        <span tal:content="view/this_namespace">
          http://namespaces.zope.org/some_ns
        </span>
      </a> &gt;
      <strong tal:content="view/this_directive">
        foo
      </strong>
      <metal:to-english-macro
         use-macro="context/@@controlpanel_macros/macros/to_english" />
    </p>
    <h2 i18n:translate="">'<span tal:content="view/this_directive"
                                 i18n:name="directive">foo</span>' directive</h2>

    <tal:block define="subdirs view/list_subdirectives"
               condition="subdirs">
      <p><span i18n:translate="">Subdirectives:</span>
        <tal:loop repeat="subdir subdirs">
          <a href="#"
             tal:attributes="href subdir/view_url"
             tal:content="subdir/name">
            subdirective
          </a><span tal:condition="not: repeat/subdir/end">,</span>
        </tal:loop>
      </p>
    </tal:block>

    <tal:bloc define="info view/directive_infos">
      <metal:attributes use-macro="context/@@controlpanel_macros/macros/summary" />
    </tal:bloc>
  </metal:main-slot>
</html>
